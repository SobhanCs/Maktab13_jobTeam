                <% Jobs.forEach( function(job) { %>
                    <div class="card horizontal hoverable">
                        <div class="card-image waves-effect waves-block waves-light">
                            <a href="<%= job.url %>">
                                <img class="" src="<%= job.logoSource %>">
                            </a>
                        </div>
                        <div class="card-stacked">
                            <div class="card-content">
                                <span class="card-title grey-text text-darken-4">
                                    <a href="<%= job.url %>">
                                        <%= job.title %>
                                    </a>
                                    <i class="activator material-icons left small pointer">more_vert</i>
                                </span>
                                <img src=<%="../img/" +job.siteName+ ".png" %> class="left" />
                                <ul class="grey-text text-darken-4">
                                    <li class="valign-wrapper">
                                        <i class="material-icons tiny">location_city</i>
                                        <%= job.companyName %>
                                    </li>
                                    <li class="valign-wrapper">
                                        <i class="material-icons tiny">location_on</i>
                                        <%= job.location %>
                                    </li>
                                    <!-- <li class="valign-wrapper">
                                    <i class="material-icons tiny">description</i>
                                    <%= job.typeOfJob %>
                                </li> -->
                                </ul>

                            </div>
                        </div>
                        <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4">
                                <i class="material-icons left small pointer">close</i>
                            </span>
                            <ul class="grey-text text-darken-4">
                                <li class="">
                                    <% job.skill.forEach( function(item) { %>
                                        <span class="chip">
                                            <%= item %>
                                        </span>
                                        <% }); %>
                                </li>
                                <!-- <li class="valign-wrapper">
                                <i class="material-icons">location_on</i>
                                <% job.relativeField.forEach( function(item) { %>
                                    <span class="chip"> <%= item %> </span>
                                <% }); %>
                            </li>
                            <li class="valign-wrapper">
                                <i class="material-icons">description</i>
                                <% job.education.forEach( function(item) { %>
                                    <span class="chip"> <%= item %> </span>
                                <% }); %>
                            </li> -->
                            </ul>
                        </div>
                    </div>
                    <% }); %>

                        <footer>
                            <ul class="pagination">
                                <% if (query.page < 4) { %>
                                    <li class="<% if (query.page == 1) { %>
                                            <%=" disabled "%>
                                        <% } %> ">
                                        <a <% if (query.page > 1) { %>
                                            href="?q=<%=query.q%>&amp;page=<%= query.page-1 %><% } %>" >
                                                    <i class="material-icons">chevron_right</i>
                                        </a>
                                    </li>
                                    <li class="waves-effect <% if (query.page == 1) { %>
                                        <%= " active " %>
                                        <% } %>">
                                        <a href="?q=<%=query.q%>&amp;page=1">1</a>
                                    </li>
                                    <li class="waves-effect <% if (query.page == 2) { %>
                                <%= " active " %>
                                <% } %>">
                                        <a href="?q=<%=query.q%>&amp;page=2">2</a>
                                    </li>
                                    <li class="waves-effect <% if (query.page == 3) { %>
                                <%= " active " %>
                                <% } %>">
                                        <a href="?q=<%=query.q%>&amp;page=3">3</a>
                                    </li>
                                    <li class="waves-block" />
                                    <a href="?q=<%=query.q%>&amp;page=4">4</a>
                                    </li>
                                    <li class="waves-effect">
                                        <a href="?q=<%=query.q%>&amp;page=5">5</a>
                                    </li>
